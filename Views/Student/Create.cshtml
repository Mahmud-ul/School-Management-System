@model Student
@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class="col-md-12">
        <h1 class="text-center">Create</h1><hr />
        <form method="post" asp-action="Create">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input type="text" class="form-control col-md-5" asp-for="Name" required="required" placeholder="Enter Name"><br>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address">Address</label>
                <textarea class="form-control col-md-5" asp-for="Address" required="required" placeholder="Address"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentId">Department</label>
                <input type="text" class="form-control col-md-5" asp-for="DepartmentId" required="required" placeholder="Enter Department"><br>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Roll">Roll</label>
                <input type="text" class="form-control col-md-5" asp-for="Roll" required="required" placeholder="Enter Roll"><br>
                <span asp-validation-for="Roll" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input type="email" class="form-control col-md-5" asp-for="Email" required="required" placeholder="Enter Email"><br>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Batch">Batch</label>
                <input type="text" class="form-control col-md-5" asp-for="Batch" required="required" placeholder="Enter Batch"><br>
                <span asp-validation-for="Batch" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
            <a class="btn btn-info" asp-action="index">Back to Student list</a>
        </form>
    </div>
</div>
<script src="~/js/site.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
