@model Student
@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-md-12">
        <h1 class="text-center">Update</h1><hr/>
        <form method="post" asp-action="Update">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input type="text" class="form-control col-md-5" asp-for="Name">
            </div>
            <div class="form-group">
                <label asp-for="Address">Address</label>
                <textarea class="form-control col-md-5" asp-for="Address"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentId">Department</label>
                <input type="text" class="form-control col-md-5" asp-for="DepartmentId">
            </div>
            <div class="form-group">
                <label asp-for="Roll">Roll</label>
                <input type="text" class="form-control col-md-5" asp-for="Roll">
            </div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input type="text" class="form-control col-md-5" asp-for="Email">
            </div>
            <div class="form-group">
                <label asp-for="Batch">Batch</label>
                <input type="text" class="form-control col-md-5" asp-for="Batch">
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
            <a class="btn btn-info" asp-action="index">Back to Student list</a>
        </form>
    </div>
</div>


