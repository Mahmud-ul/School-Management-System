@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12">
        <h1 class="text-center">Department</h1><hr/>
        <a class="btn btn-primary text-white mb-4" asp-action="create">Create Department</a>
        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Detail</th>
                    <th>Action</th>
                </tr>
            </thead>
            @foreach (Department item in Model)
            {
                <tbody>

                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Detail</td>
                        <td>
                            <a class="btn btn-primary text-white" asp-action="Update" asp-route-id="@item.Id">Update</a>
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Confirm delete user: @item.Name')">Delete</a>
                        </td>
                    </tr>
                    
                </tbody>
            }
            </table>
    </div>
</div>
